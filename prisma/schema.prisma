generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  GUEST
  USER
  ADMIN
  SUPERADMIN
}

model User {
  id             Int         @id @default(autoincrement())
  firstName      String
  lastName       String
  profilePicture String?
  googleId       String?     @unique
  facebookId     String?     @unique
  email          String      @unique
  password       String?
  role           UserRole    @default(ADMIN)
  createdAt      DateTime    @default(now())
  characters     Character[]
}

model Character {
  id          Int          @id @default(autoincrement())
  user        User         @relation(fields: [userId], references: [id])
  userId      Int
  firstName   String
  lastName    String?
  level       Int          @default(1)
  profits     Int          @default(10)
  stats       Json         @default("{}")
  picture     Json?
  height      Int
  weight      Int
  age         Int
  sex         String
  background  String
  attributes  Json
  perks       Perk[]
  weapons     Weapon[]
  armor       Armor[]
  cybernetics Cybernetic[]
}

enum KeywordType {
  weapon
  armor
  cybernetic
}

model Keyword {
  id          Int         @id @default(autoincrement())
  keywordType KeywordType
  name        String
  description String

  @@unique([name, keywordType])
}

model Weapon {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  picture     Json?
  description String?
  stats       Json
  price       Int?
  cybernetic  Cybernetic[]
  characters  Character[]
  keywords    Json[]
}

model Armor {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  picture     Json?
  description String?
  stats       Json
  price       Int?
  cybernetic  Cybernetic[]
  characters  Character[]
  keywords    Json[]
}

enum CyberneticType {
  roll
  stat
  offensive
  defensive
  function
}

model Cybernetic {
  id             Int            @id @default(autoincrement())
  name           String         @unique
  cyberneticType CyberneticType
  stats          Json
  picture        Json?
  description    String
  body           String[]
  price          Int?
  characters     Character[]
  weapons        Weapon[]
  armor          Armor[]
  actions        Action[]
  keywords       Json[]
}

model Perk {
  id           Int         @id @default(autoincrement())
  name         String      @unique
  description  String
  requirements Json?
  characters   Character[]
}

enum ActionType {
  action
  extendedAction
  reaction
}

model Action {
  id             Int          @id @default(autoincrement())
  name           String       @unique
  description    String
  costs          Json?
  attribute      String?
  skill          String?
  actionType     ActionType
  actionSubtypes String[]
  cybernetics    Cybernetic[]
}

model BookEntry {
  id      Int    @id @default(autoincrement())
  title   String @unique
  content String
}

